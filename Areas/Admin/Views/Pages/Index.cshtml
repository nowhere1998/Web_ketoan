@model IEnumerable<MyShop.Models.Page>

@{
    ViewData["Title"] = "Danh sách trang";
}

<main class="py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary">Danh sách trang</h3>

        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Thêm mới
        </a>
    </div>

    <form method="get"
          asp-area="Admin"
          asp-controller="Pages"
          asp-action="Index"
          class="mb-3">
        <div class="row">

            <div class="input-group col-md-8">
                <div class="input-group-prepend">
                    <!-- nút submit là icon search -->
                    <button type="submit" class="btn btn-primary" title="Tìm kiếm">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <input type="text"
                       name="name"
                       value="@ViewBag.searchName"
                       class="form-control"
                       placeholder="Tìm theo tên..." />
            </div>
            <!-- Lọc theo vị trí -->
            <div class="col-md-4">
                <select name="position"
                        class="form-select"
                        onchange="this.form.submit()">
                    <option value="">-- Tất cả vị trí --</option>
                    <option value="1" selected="@(ViewBag.Position?.ToString() == "1")">Menu trên</option>
                    <option value="2" selected="@(ViewBag.Position?.ToString() == "2")">Menu giữa</option>
                    <option value="3" selected="@(ViewBag.Position?.ToString() == "3")">Menu dưới</option>
                    <option value="4" selected="@(ViewBag.Position?.ToString() == "4")">Giữa dưới</option>
                    <option value="5" selected="@(ViewBag.Position?.ToString() == "5")">Menu nhỏ trên cùng</option>
                    <option value="6" selected="@(ViewBag.Position?.ToString() == "6")">Trên dưới</option>
                </select>
            </div>
        </div>

    </form>

    <table class="table table-hover align-middle">
        <thead class="table-primary">
            <tr>
                <th>Tên trang</th>
                <th>Loại trang</th>
                <th>Thứ tự</th>
                <th>Trạng thái</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@StringHelper.ShowNameLevel(item.Name, item.Level)</td>
                        <td>
                            @(item.Type == 0 ? "Trang liên kết" : "Trang nội dung")
                        </td>
                        @* <td>@item.Link</td>
                        <td>
                            @if (item.Target == "_blank")
                            {
                                <span class="badge bg-info">Trang mới</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Trang hiện tại</span>
                            }
                        </td>

                        <td>
                            @(item.Position == 1 ? "Menu trên" :
                              item.Position == 2 ? "Menu giữa" :
                              item.Position == 3 ? "Menu dưới" :
                              item.Position == 4 ? "Giữa dưới" : "---")
                        </td> *@

                        <td>@item.Ord</td>
                        <td>
                            <span class="badge @(item.Active == 1 ? "bg-success" : "bg-secondary")">
                                @(item.Active == 1 ? "Hiển thị" : "Ẩn")
                            </span>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-info me-1"
                               asp-action="Create"
                               asp-route-strLevel="@item.Level"
                               title="Chi tiết">
                                <i class="fa fa-plus"></i>
                            </a>
                            <a class="btn btn-sm btn-outline-primary me-1"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               title="Sửa">
                                <i class="fa fa-edit"></i>
                            </a>
                            <form asp-action="Delete"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa không?')">
                                <button class="btn btn-sm btn-outline-danger" title="Xóa">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center text-muted">
                        Không có dữ liệu
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            @if (ViewBag.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page - 1 })">«</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = i })">@i</a>
                </li>
            }

            @if (ViewBag.Page < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page + 1 })">»</a>
                </li>
            }

        </ul>
    </nav>
</main>
