@model IEnumerable<MyShop.Models.Advertise>

@{
    ViewData["Title"] = "Danh sách quảng cáo";
}

<body class="bg-light">

    <main class="py-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="text-primary">Danh sách quảng cáo</h3>

            <a asp-action="create" asp-controller="advertises" class="btn btn-primary">
                <i class="fa fa-plus"></i> Thêm mới
            </a>

        </div>

        <form method="get"
              asp-area="Admin"
              asp-controller="Advertises"
              asp-action="Index"
              class="mb-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <!-- nút submit là icon search -->
                    <button type="submit" class="btn btn-primary" title="Tìm kiếm">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <input type="text"
                       name="name"
                       value="@ViewBag.searchName"
                       class="form-control"
                       placeholder="Tìm theo tên..." />
            </div>
        </form>

        <table class="table table-hover align-middle" style="border-collapse:collapse;">
            <thead class="table-primary">
                <tr style="border-bottom:2px solid #cfd4da;">
                    <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Image)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Position)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Ord)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Active)</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom:1px solid #dee2e6;">
                        <td>@item.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img src="@item.Image" style="border-radius:6px; max-width:200px; max-height: 50px" />
                            }
                        </td>

                        <td>
                            @if (item.Position == 1)
                            {
                                <span>Banner</span>
                            }
                            else if (item.Position == 2)
                            {
                                <span>Slide trang chủ</span>
                            }
                            else if (item.Position == 3)
                            {
                                <span>Bên phải trang</span>
                            }
                            else if (item.Position == 4)
                            {
                                <span>Giảng viên</span>
                            }
                            else if (item.Position == 5)
                            {
                                <span>Đối tác</span>
                            }
                            else if (item.Position == 6)
                            {
                                <span>Logo</span>
                            }
                            else if (item.Position == 7)
                            {
                                <span>Banner trên cùng</span>
                            }
                            else
                            {
                                <span></span>
                            }
                        </td>
                        <td>@item.Ord</td>
                        <td>
                            @if (item.Active == true)
                            {
                                <span class="badge bg-success">Hiển thị</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Ẩn</span>
                            }
                        </td>

                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary me-1"
                               href="@Url.Action("Edit", new { id = item.Id })">
                                <i class="fa fa-edit"></i>
                            </a>

                            <a class="btn btn-sm btn-outline-danger me-1" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')"
                               href="@Url.Action("Delete", new { id = item.Id })">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">

                @if (ViewBag.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page - 1 })">«</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = i })">@i</a>
                    </li>
                }

                @if (ViewBag.Page < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page + 1 })">»</a>
                    </li>
                }

            </ul>
        </nav>
    </main>


</body>