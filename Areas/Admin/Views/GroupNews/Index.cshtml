@model IEnumerable<MyShop.Models.GroupNews>

@{
    ViewData["Title"] = "Danh sách nhóm tin";
}

<main class="py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary">Danh sách nhóm tin</h3>

        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Thêm mới
        </a>
    </div>
    <form method="get"
          asp-area="Admin"
          asp-controller="GroupNews"
          asp-action="Index"
          class="mb-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <!-- nút submit là icon search -->
                <button type="submit" class="btn btn-primary" title="Tìm kiếm">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <input type="text"
                   name="name"
                   value="@ViewBag.searchName"
                   class="form-control"
                   placeholder="Tìm theo tên..." />
        </div>
    </form>
    <table class="table table-hover align-middle" style="border-collapse:collapse;">
        <thead class="table-primary">
            <tr style="border-bottom:2px solid #cfd4da;">
                <th>Tên</th>
                <th>Thứ tự</th>
                <th>Trạng thái</th>
                <th>Hình ảnh</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr style="border-bottom:1px solid #dee2e6;">
                    <td>@StringHelper.ShowNameLevel(item.Name, item.Level)</td>
                    <td>@item.Ord</td>
                    <td>
                        @if (item.Active == 1)
                        {
                            <span class="badge bg-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ẩn</span>
                        }
                    </td>

                    <td>
                        @if (!string.IsNullOrEmpty(item.Hinhanh))
                        {
                            <img src="@item.Hinhanh"
                                 alt="@item.Name"
                                 style="height:50px;border-radius:6px;" />
                        }
                    </td>

                    <td class="text-center">
                        <a class="btn btn-sm btn-outline-info me-1"
                           asp-action="Create"
                           asp-route-strLevel="@item.Level"
                           title="Chi tiết">
                            <i class="fa fa-plus"></i>
                        </a>
                        <a class="btn btn-sm btn-outline-primary me-1"
                           asp-action="Edit"
                           asp-route-id="@item.Id">
                            <i class="fa fa-edit"></i>
                        </a>

                        <a class="btn btn-sm btn-outline-danger"
                           asp-action="Delete"
                           asp-route-id="@item.Id"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            @if (ViewBag.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page - 1 })">«</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = i })">@i</a>
                </li>
            }

            @if (ViewBag.Page < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page + 1 })">»</a>
                </li>
            }

        </ul>
    </nav>
</main>
